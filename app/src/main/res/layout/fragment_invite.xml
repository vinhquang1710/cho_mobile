<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_size_10"
        android:paddingBottom="@dimen/dimen_size_10"
        android:paddingLeft="@dimen/dimen_size_20"
        android:id="@+id/ln_search_follow"
        android:background="@drawable/xml_layout_pressed">

        <ImageView
            android:layout_width="@dimen/dimen_size_48"
            android:layout_height="@dimen/dimen_size_48"
            android:src="@drawable/ic_search_follow"/>

        <com.example.administrator.chotot.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm thêm bạn bè"
            app:typeface="roboto_medium"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/dimen_text_16sp"
            android:layout_marginLeft="@dimen/dimen_size_20"/>
    </LinearLayout>

    <com.example.administrator.chotot.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgFragment"
        android:text="Bạn không có thông báo nào"
        android:gravity="center"
        app:typeface="roboto_light"/>
</LinearLayout>